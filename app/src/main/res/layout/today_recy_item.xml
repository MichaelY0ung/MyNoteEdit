<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dp"
    android:layout_weight="1"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/today_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/today_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:text="title"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp">
                    <ImageView
                        android:id="@+id/today_alarm_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alarm_add_red_400_24dp"/>
                    <TextView
                        android:id="@+id/today_alarm_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/today_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_border_yellow_400_24dp"/>
                    <TextView
                        android:id="@+id/today_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="done"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/today_text"
                android:layout_below="@+id/today_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="16sp"
                android:maxLines="3"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_below="@+id/today_text"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/today_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="sports · work · gaming"
                    android:drawableLeft="@drawable/ic_bookmark_green_400_18dp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/today_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016/9/13/13:00"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>